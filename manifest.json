{
  "manifest_version": 2,

  "name": "Ssh Flashlight",
  "description": "Improve your ssh tunneling navigation",
  "icons": {
      "16": "icons/icon16.png",
      "20": "icons/icon20.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
  },
  "version": "1.4.1",
  "background": {
    "scripts": ["flashlight.js"]
  },
  "options_ui": {
    "page": "config/config.html",
    "open_in_tab": true
  },
  "omnibox": {
    "keyword": "flash"
  },
  "browser_action": {
    "default_title": "Click to activate the flashlight"
  },
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
